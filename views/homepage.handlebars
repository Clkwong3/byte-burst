<div class="homepage-main">
  <!-- Welcome Container -->
  <div class="welcome-container">
    <h2>Welcome to Byte Burst!</h2>
    <p>Discover and share your thoughts with the Byte Burst community.</p>
  </div>

  <!-- Post Container -->
  <div class="homepage-post-container">
    {{#if posts}}
      {{#each posts as |post|}}
        <div class="homepage-post">
          <div class="homepage-post-header">
            <h3 class="homepage-post-title">
              <a href="/post/{{post.id}}">{{post.title}}</a>
            </h3>
            <p class="homepage-post-info">
              Author:
              {{post.User.user_name}}
              on
              {{format_date post.createdAt}}
            </p>
          </div>

          <div class="homepage-preview">
            <p class="homepage-post-content">
              <!-- Display the first sentence of the post content -->
              {{getFirstSentence post.content}}
            </p>
            <!-- Comment count section -->
            <p class="homepage-comment-count">
              &#x1F4AC;
              {{post.commentCount}}
            </p>
          </div>
        </div>
      {{/each}}
    {{else}}
      <p class="homepage-no-posts">No posts available.</p>
    {{/if}}
  </div>
</div>