<div class="individual-post">
  <div class="post">
    <!-- Hidden input to store the post id -->
    <input type="hidden" value="{{post.id}}" />

    <!-- Post Header -->
    <div class="post-header">
      <h3>{{post.title}}</h3>

      <!-- Tagline with author's username and creation date -->
      <p class="tagline">
        Posted by
        {{post.User.user_name}}
        on
        {{format_date post.createdAt}}
      </p>
    </div>

    <!-- Post Content -->
    <div class="post-body">
      <p class="post-content">
        {{post.content}}
      </p>

      <!-- Add/Edit/Delete buttons (if authenticated user is the post owner) -->
      {{#if isOwner}}
        <button class="edit-post-btn" data-id="{{post.id}}">Edit</button>
        <button class="delete-post-btn" data-id="{{post.id}}">Delete</button>
      {{/if}}
    </div>
  </div>
</div>