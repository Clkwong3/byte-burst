<!-- Container for creating a new post -->
<div class="new-post-container">
  <!-- Form for creating a new post -->
  <form class="new-post-form">
    <!-- Input for the post title -->
    <div class="form-group">
      <label for="post-title">Post Title: </label>
      <input type="text" id="post-title" placeholder="Enter post title" />
    </div>

    <!-- Input for the post content -->
    <div class="form-group">
      <label for="post-content">Post Content: </label>
      <textarea id="post-content" placeholder="Enter post content"></textarea>
    </div>

    <!-- Button to create a new post -->
    <button class="submit-btn" type="submit">Create</button>
  </form>
</div>

<!-- Include JavaScript file for handling the creation of a new post -->
<script src="/js/addPost.js"></script>